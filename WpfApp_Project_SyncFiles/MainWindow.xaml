<Window x:Class="WpfApp_Project_SyncFiles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_Project_SyncFiles"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1000">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*" />
            <ColumnDefinition Width="25*" />
            <ColumnDefinition Width="25*" />
            <ColumnDefinition Width="25*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
        </Grid.RowDefinitions>

        <!--Buttons-->
        <Button Command="{Binding UpdateCommandBrowseExternalDrive1}" Grid.Column="0" Grid.Row="5">
            External Drive 1
        </Button>
        <Button Command="{Binding UpdateCommandConvert}" Grid.Column="0" Grid.Row="6">
            External Drive 2
        </Button>
        <Button Command="{Binding UpdateCommandClear}" Grid.Column="0" Grid.Row="7">
            External Drive 3
        </Button>
        <Button Command="{Binding UpdateCommandSave}" Grid.Column="0" Grid.Row="8">
            External Drive 4
        </Button>

        <!--Textboxes-->
        <Border Style="{StaticResource TextBoxStyle}" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="5"
        HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TextBox Text="{Binding Path=ExternalDrive1Path}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Border>

        <Border Style="{StaticResource TextBoxStyle}" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="6"
        HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TextBox Text="{Binding Path=ExternalDrive2Path}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Border>

        <Border Style="{StaticResource TextBoxStyle}" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="7"
        HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TextBox Text="{Binding Path=ExternalDrive3Path}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Border>

        <Border Style="{StaticResource TextBoxStyle}" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="8"
        HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TextBox Text="{Binding Path=ExternalDrive4Path}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Border>


    </Grid>
</Window>
